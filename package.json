{
    "name": "storybook-extras",
    "version": "0.0.0",
    "license": "MIT",
    "author": {
        "name": "Mostafa Sherif",
        "email": "mosherif87@gmail.com"
    },
    "scripts": {
        "************ DEV **************": "",
        "watch": "nx watch",
        "watch:all": "nx run-many --target=watch --all --parallel=10 --exclude=demo",
        "test": "nx test:storybook",
        "************ PROD **************": "",
        "build": "nx build",
        "build:all": "nx run-many --target=build --all --parallel=10 --exclude=demo",
        "chromatic": "nx chromatic",
        "************ RELEASE **************": "",
        "prerelease": "npm run build",
        "release": "auto shipit --no-changelog",
        "postrelease": "npm run release:deploy",
        "release:deploy": "push-dir --dir demo/storybook-static --branch gh-pages --cleanup --message 'Update Storybook'",
        "postrelease:deploy": "npm run release:changelog",
        "release:changelog": "auto-changelog -c ./changelog/config.json",
        "postrelease:changelog": "git add . && git commit -a -m 'chore(release): Update `CHANGELOG.md`' && git push"
    },
    "private": true,
    "devDependencies": {
        "@nrwl/nx-cloud": "latest",
        "auto": "^10.3.0",
        "auto-changelog": "^2.4.0",
        "handlebars-helpers": "^0.10.0",
        "lerna": "^5.1.8",
        "nx": "^15.6.3",
        "prettier": "^2.6.2",
        "push-dir": "^0.4.1"
    },
    "workspaces": [
        "demo",
        "packages/*"
    ],
    "auto": {
        "plugins": [
            "npm",
            "released"
        ]
    },
    "resolutions": {
        "@storybook-extras/angular": "file:./packages/angular",
        "@storybook-extras/console": "file:./packages/console",
        "@storybook-extras/devkit": "file:./packages/devkit",
        "@storybook-extras/markdown": "file:./packages/markdown",
        "@storybook-extras/swagger": "file:./packages/swagger",
        "@storybook-extras/toolbars": "file:./packages/toolbars",
        "@storybook-extras/variants": "file:./packages/variants"
    }
}
