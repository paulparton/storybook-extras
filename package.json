{
    "name": "storybook-extras",
    "version": "0.0.0",
    "license": "MIT",
    "author": {
        "name": "Mostafa Sherif",
        "email": "mosherif87@gmail.com"
    },
    "scripts": {
        "************ DEV **************": "",
        "storybook": "nx storybook",
        "build:watch": "nx run-many --target=build:watch --all --parallel=10 --exclude=demo",
        "test": "nx test:storybook",
        "************ PROD **************": "",
        "build": "nx build",
        "build:all": "nx run-many --target=build --all --parallel=10 --exclude=demo",
        "chromatic": "nx chromatic",
        "************ RELEASE **************": "",
        "prerelease": "yarn build",
        "release": "auto shipit --no-changelog",
        "postrelease": "yarn release:changelog",
        "release:changelog": "git pull && auto-changelog -c ./changelog/config.json",
        "postrelease:changelog": "git add . && git commit -a -m 'chore(release): Update `CHANGELOG.md` [skip ci]' && git push"
    },
    "private": true,
    "devDependencies": {
        "@auto-it/gh-pages": "^10.37.6",
        "@nrwl/nx-cloud": "latest",
        "auto": "^10.3.0",
        "auto-changelog": "^2.4.0",
        "handlebars-helpers": "^0.10.0",
        "lerna": "^5.1.8",
        "nx": "^15.6.3",
        "prettier": "^2.6.2",
        "push-dir": "^0.4.1"
    },
    "workspaces": [
        "demo",
        "packages/*"
    ],
    "auto": {
        "plugins": [
            "npm",
            "released",
            [
                "gh-pages",
                {
                    "dir": "demo/storybook-static"
                }
            ]
        ]
    },
    "packageManager": "yarn@3.4.1"
}
